{% extends 'base.jinja' %}
{% block body %}
  <div class="top-root">
    <header>
      <h1 class="site-title">Planetter3</h1>
    </header>

    <main>
      <form class="login-box" method="POST" action="/">
        <input type="text" name="username" placeholder="アカウント名" />
        <input type="password" name="password" placeholder="パスワード" />
        <button type="submit" type="hidden" name="action" value="login">ログイン／新規登録</button>
        <div class="red-text">{{ get_flashed_messages(category_filter=['login_error']).0|default('') }}</div>
      </form>
    </main>
  </div>
{% endblock %}
